{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Voomp (debug)",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsc-watch",
      "args": [
        "-p",
        "tsconfig.build.json",
        "--onSuccess",
        "npm start"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}